<%= form_with(model: booking, local: true) do |form| %>
  <%= form.label :user_id %>
  <%= form.collection_select :user_id, User.where(userable_type: "Customer"), :id, :name %><br>

  <%= form.label :vehicle_id %>
  <%= form.collection_select :vehicle_id, Vehicle.all, :id, :model %><br>

  <%= form.label :start_location %>
  <%= form.text_field :start_location %><br>

  <%= form.label :end_location %>
  <%= form.text_field :end_location %><br>

  <%= form.label :start_time %>
  <%= form.datetime_select :start_time %><br>

  <%= form.label :end_time %>
  <%= form.datetime_select :end_time %><br>

  <%= form.label :price %>
  <%= form.number_field :price %><br>

  <%= form.label :status %>
  <%= form.check_box :status %><br>

  <%= form.submit %>
<% end %>
