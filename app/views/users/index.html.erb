<h1>All Users</h1>

<%= link_to "New User", new_user_path %>

<ul>
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user_path(user) %> |
      Role: <%= user.userable_type %> |
      Info: <%= user.customer? ? user.userable.location : user.userable.licence_no %>
    </li>
  <% end %>
</ul>
